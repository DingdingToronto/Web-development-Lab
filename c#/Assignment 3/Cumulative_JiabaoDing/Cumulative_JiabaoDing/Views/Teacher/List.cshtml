﻿@model IEnumerable<SchoolProject.Models.Teacher>
@{
    ViewBag.Title = "List";
}

<div id="containerlist">
    <h2>List of Teachers</h2>
    <form action="/Teacher/List" method="GET">
        <input type="text" name="SearchKey" autocomplete="off" placeholder="name" />
        <input type="text" name="SearchNumber" placeholder="employeenumber" />
        <input type="number" step="0.01" name="SearchId" placeholder="salary" />
        <input type="date" name="SearchDate" placeholder="date" />

        <input type="submit" value="Search" />
    </form>
    @foreach (var teacher in Model)
    {
        <div class="listitem row">
            <div class="col-md-12"><a href="/Teacher/Show/@teacher.TeacherId"> @teacher.TeacherFname @teacher.TeacherLname </a></div>
        </div>
    }
</div>

